                </GroupBox>
                <GroupBox Name="GrbCategorizacion" Width="230" Height="157"  Canvas.Left="8" Canvas.Top="180">
                    <GroupBox.Header>
                        <WrapPanel>
                            <CheckBox   IsChecked="True" VerticalAlignment="Stretch" Content="Datos Categorización"  Foreground="#ffffff" Width="244" Height="20" />
                        </WrapPanel>
                    </GroupBox.Header>
                    <Canvas>
                        <Label  Height="auto" Width="113" Canvas.Left="3"   HorizontalContentAlignment="Left"   Canvas.Top="-2" >Categorización</Label>
                        <TextBox Opacity="0.7"  VerticalContentAlignment="Center" Canvas.Left="92" Height="auto" x:Name="txtCategorizacion"  Width="131" TabIndex="3" Canvas.Top="4"/>

