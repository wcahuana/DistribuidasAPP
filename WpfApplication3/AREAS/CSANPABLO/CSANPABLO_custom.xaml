                                <WrapPanel>
                                    <CheckBox Name="prueba111"  IsEnabled="False" VerticalAlignment="Stretch" Content="CONTACTABILIDAD" Foreground="#ffffff" Width="284"  Unchecked="CheckBox_Unchecked"  Checked="CheckBox_Checked" Height="30"/>
