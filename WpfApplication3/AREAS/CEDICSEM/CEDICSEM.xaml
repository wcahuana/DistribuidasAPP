                        <WrapPanel>
                            <CheckBox Name="chkDatosContractuales" Unchecked="CheckBox_Unchecked" Checked="CheckBox_Checked" IsChecked="True" VerticalAlignment="Stretch" Content="Datos Contractuales"  Foreground="#ffffff" Width="137" Height="20" />
