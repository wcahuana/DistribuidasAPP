    <UserControl.Resources>
        <ResourceDictionary>



            <Style x:Key="LabelTemplate2" TargetType="{x:Type Label}">
                <Setter Property="BorderBrush" Value="#6C93E0" />
                <Setter Property="BorderThickness" Value="1" />

