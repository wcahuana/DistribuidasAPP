<UserControl x:Class="WpfApplication3.GUIusuario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="MySampleViewInteractionWorksheet"      
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    MinWidth="{Binding ElementName=GUIusuario, Path=MySampleViewSizeManager.MinSize.Width}"
    MinHeight="{Binding ElementName=GUIusuario, Path=MySampleViewSizeManager.MinSize.Height}"           
             Loaded="MySampleViewInteractionWorksheet_Loaded" 
             Height="auto"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfApplication3;component/Resources/Styles/StyleGeneralCustomizado.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White" >
        <ScrollViewer HorizontalScrollBarVisibility="Visible" >
            <TabControl Canvas.Left="0" Canvas.Top="38" Width="1000" Name="TabControlAreas" FontFamily="Arial" FontSize="12"  Height="1300">

            </TabControl>
        </ScrollViewer>
    </Grid>

</UserControl>